<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainWindow" Width="1275" Height="750"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Icon="/Resources/Trello.ico">
    <Window.Resources>
        
        <Style x:Key="RoundedButtonStyle3" TargetType="{x:Type Button}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/> 
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" Margin="0,0,0,0">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" TargetName="border" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Transparent"></Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Transparent"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <ControlTemplate x:Key="CBCustomToggleButton" TargetType="ToggleButton">

            <Canvas Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">


                <fa:ImageAwesome x:Name="buttonx" Margin="0,0,0,0"
                    Icon="ArrowCircleDown"
                                 Width="20"
                                 Height="50"
                                 Foreground="White">

                </fa:ImageAwesome>

            </Canvas>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="buttonx" Property="Foreground" Value="Cyan">

                    </Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter TargetName="buttonx" Property="Foreground" Value="White">

                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <Style x:Key="CombStyle2" TargetType="{x:Type ComboBox}">
            <Setter Property="Control.Template">

                <Setter.Value>

                    <ControlTemplate TargetType="ComboBox">
                        <Border Width="{TemplateBinding Width}" 
                                    BorderBrush="Cyan"
                                    BorderThickness="1"
                                CornerRadius="10"
                                    Height="{TemplateBinding Height}">
                            <Canvas Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">

                                <Label Foreground="Cyan"
                                    Name="ContentSite" Width="100" Margin="0,0,0,0" FontSize="15" Height="50"
                                             VerticalContentAlignment="Center"
                                             Content="{TemplateBinding ComboBox.SelectionBoxItem}"
                                             ContentTemplate="{TemplateBinding ComboBox.SelectionBoxItemTemplate}"/>

                                <Popup Name="PART_Popup" Width="{TemplateBinding Width}" Height="60"
                                IsOpen="{TemplateBinding ComboBox.IsDropDownOpen}"
                                       Placement="Bottom"
                                       PopupAnimation="Scroll"
                                       >
                                    <Canvas Name="DropDown"
                                     SnapsToDevicePixels="True">

                                        <Border Name="DropDownBorder" Width="{TemplateBinding Width}" Height="60"
                                           Background="Transparent"
                                                BorderBrush="Cyan"
                                                BorderThickness="1"
                                                CornerRadius="5">

                                            <ScrollViewer
                                             BorderThickness="0" Background="Transparent"
                                             Foreground="Cyan"
                                            HorizontalScrollBarVisibility="Hidden"
                                            VerticalScrollBarVisibility="Hidden"
                                            VerticalContentAlignment="Center"
                                            >
                                                <ItemsPresenter Height="60"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Canvas>
                                </Popup>
                                <ToggleButton Margin="100,0,0,0" Name="ToggleButton" Width="20" Height="50"
                                         Template="{StaticResource CBCustomToggleButton}"
                                          Click="ToggleButton_Click"
                                          />
                            </Canvas>
                        </Border>

                    </ControlTemplate>

                </Setter.Value>

            </Setter>
        </Style>

        <Style x:Key="AccountMenuButtons" TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="0" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" Margin="0,0,0,0">
                            <TextBlock TextAlignment="Left" x:Name="txt" 
                                       FontWeight="Thin"
                                       VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Cyan" FontSize="{TemplateBinding FontSize}" Text="{TemplateBinding Content}"></TextBlock>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" TargetName="txt" Value="Cyan"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Foreground" TargetName="txt" Value="Lime"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="Cyan"/>
                                <Setter Property="Foreground" TargetName="txt" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <ControlTemplate x:Key="ImageBorderTemplate">
            <Border x:Name="border" CornerRadius="0" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"  SnapsToDevicePixels="true" Margin="0,0,0,0"
                    Initialized="border_Initialized_1">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding XPath=img}">

                    </ImageBrush>
                </Border.Background>
            </Border>
        </ControlTemplate>

        <Style x:Key="Listbox_working_enviroment_template" TargetType="{x:Type ListBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="20"
                                SnapsToDevicePixels="True"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0,10,0,0" Height="460"
                                            Focusable="False">
                                <StackPanel IsItemsHost="True"></StackPanel>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>    
        </Style>

        <Style x:Key="DiscoverUserButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" Margin="0,0,0,0">
                            <Canvas>
                                <TextBlock TextAlignment="Left" x:Name="txt"
                                       FontWeight="Thin"
                                       Margin="40,4,0,0" Foreground="Cyan" FontSize="{TemplateBinding FontSize}" Text="{TemplateBinding Content}"></TextBlock>
                                <fa:ImageAwesome Icon="QuestionCircleOutline"
                                                 Foreground="Gray"
                                                 Height="20"
                                                 Width="20"
                                                 Margin="10,10,0,0">

                                </fa:ImageAwesome>
                            </Canvas>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="Black"/>
                                <Setter Property="Foreground" TargetName="txt" Value="Lime"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" TargetName="border" Value="Black"/>
                                <Setter Property="Foreground" TargetName="txt" Value="Cyan"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="Cyan"/>
                                <Setter Property="Foreground" TargetName="txt" Value="Black"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="Style_for_scrollviewer2" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Border x:Name="border" Margin="10,0,0,0" CornerRadius="10" BorderBrush="Lime" BorderThickness="2" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" >
                            <ScrollViewer>
                                <TextBox Margin="15,0,0,0"
                                Text="{Binding Path=Description}"
                                Background="Transparent"
                                BorderThickness="0"
                                BorderBrush="Cyan"
                                Foreground="Cyan"
                                FontSize="15"
                                TextWrapping="Wrap"
                                IsReadOnly="True"
                                >
                                </TextBox>
                            </ScrollViewer>

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextboxStyle2" TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="Cyan"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" Margin="0,0,0,0">
                            <ScrollViewer Margin="10,0,0,0" 
                            x:Name="PART_ContentHost"  Width="280" Height="40"
                            Focusable="false"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden"
                            VerticalContentAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextboxStyle3" TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="Cyan"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Foreground" Value="Magenta"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" Margin="0,0,0,0" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" Background="Transparent" SnapsToDevicePixels="true" >
                            <ScrollViewer Height="190"
                                          Margin="3,0,0,0" 
                                          x:Name="w"  Width="250"    
                                          VerticalScrollBarVisibility="Visible"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Foreground="Magenta"
                                          Background="White">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                                    <Grid x:Name="GridRoot" Width="12" Background="{x:Null}">
                                                        <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                                            <Track.Thumb>
                                                                <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" 
                                               Style="{DynamicResource ScrollThumbs}"/>
                                                            </Track.Thumb>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                                            </Track.IncreaseRepeatButton>
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                                            </Track.DecreaseRepeatButton>
                                                        </Track>
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                                            <Setter Value="DarkCyan" 
                                            TargetName="Thumb" Property="Background"/>

                                                        </Trigger>
                                                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="False">
                                                            <Setter Value="DarkCyan" 
                                            TargetName="Thumb" Property="Background"/>
                                                        </Trigger>

                                                        <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                                            <Setter Value="Cyan" TargetName="Thumb" Property="Background"/>
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="false">
                                                            <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                        <Trigger Property="Orientation" Value="Horizontal">
                                                            <Setter TargetName="GridRoot" Property="LayoutTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="-90"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter TargetName="PART_Track" Property="LayoutTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="-90"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Width" Value="Auto"/>
                                                            <Setter Property="Height" Value="12"/>
                                                            <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                                            <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                                            <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollViewer.Resources>
                            </ScrollViewer>
                            
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextboxStyle4" TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="Cyan"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" Margin="0,0,0,0" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" Background="Transparent" SnapsToDevicePixels="true" >
                            <ScrollViewer Height="190" VerticalScrollBarVisibility="Auto">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                                    <Grid x:Name="GridRoot" Width="12" Background="{x:Null}">
                                                        <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                                            <Track.Thumb>
                                                                <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" 
                                               Style="{DynamicResource ScrollThumbs}"/>
                                                            </Track.Thumb>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                                            </Track.IncreaseRepeatButton>
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                                            </Track.DecreaseRepeatButton>
                                                        </Track>
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                                            <Setter Value="DarkCyan" 
                                            TargetName="Thumb" Property="Background"/>

                                                        </Trigger>
                                                        <Trigger SourceName="Thumb" Property="IsMouseOver" Value="False">
                                                            <Setter Value="DarkCyan" 
                                            TargetName="Thumb" Property="Background"/>
                                                        </Trigger>

                                                        <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                                            <Setter Value="Cyan" TargetName="Thumb" Property="Background"/>
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="false">
                                                            <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                        <Trigger Property="Orientation" Value="Horizontal">
                                                            <Setter TargetName="GridRoot" Property="LayoutTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="-90"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter TargetName="PART_Track" Property="LayoutTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="-90"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="Width" Value="Auto"/>
                                                            <Setter Property="Height" Value="12"/>
                                                            <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                                            <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                                            <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ScrollViewer.Resources>
                                <TextBox Margin="5,5,0,0"
                                
                                Background="Transparent"
                                BorderThickness="0"
                                BorderBrush="Magenta"
                                Foreground="Magenta"
                                FontSize="15"
                                TextWrapping="Wrap"
                                 
                                >
                                </TextBox>
                            </ScrollViewer>

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Style_for_scrollviewer3" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Border x:Name="border" Margin="10,0,0,0" CornerRadius="10" BorderBrush="White" BorderThickness="2" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" >
                            <ScrollViewer>
                                <TextBox Margin="15,0,0,0"
                                Text="{Binding Path=Description}"
                                Background="Transparent"
                                BorderThickness="0"
                                BorderBrush="Yellow"
                                Foreground="Yellow"
                                FontSize="15"
                                TextWrapping="Wrap"
                                >
                                </TextBox>
                            </ScrollViewer>

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Style_for_scrollviewer4" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Border x:Name="border" Margin="10,0,0,0" CornerRadius="10" BorderBrush="White" BorderThickness="2" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" >
                            <ScrollViewer>
                                <TextBox Margin="15,0,0,0"
                                Text="{Binding Path=Description}"
                                Background="Transparent"
                                BorderThickness="0"
                                BorderBrush="Red"
                                Foreground="Red"
                                FontSize="15"
                                TextWrapping="Wrap"
                                >
                                </TextBox>
                            </ScrollViewer>

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Style_for_scrollviewer5" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Border x:Name="border" Margin="10,0,0,0" CornerRadius="10" BorderBrush="White" BorderThickness="2" Background="{TemplateBinding Background}" SnapsToDevicePixels="true" >
                            <ScrollViewer>
                                <TextBox Margin="15,0,0,0"
                                Text="{Binding Path=Description}"
                                Background="Transparent"
                                BorderThickness="0"
                                BorderBrush="Lime"
                                Foreground="Lime"
                                FontSize="15"
                                TextWrapping="Wrap"
                                >
                                </TextBox>
                            </ScrollViewer>

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="Task_Data_Template3">
            <Canvas Width="250" Height="120"
                    Margin="10,10,0,0"
                   >
                <ScrollViewer  Height="100" Margin="0,10,0,0" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Vertical" Width="230">
                        <Line X1="0" X2="250" Stroke="Lime" StrokeThickness="2"></Line>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,0,0,0"
                               Content="Task Name:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,0,0,0"
                               Content="{Binding Path=Name}"></Label>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,-5,0,0"
                               Content="Issued by:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,-5,0,0"
                               Content="{Binding Path=issuedby}"></Label>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,-5,0,0"
                               Content="Date:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,-5,0,0"
                               Content="{Binding Path=Date}"></Label>
                        </StackPanel>
                        <Label Foreground="Cyan" FontSize="15" Margin="10,-5,0,0"
                               Content="Description:"></Label>
                        <ScrollViewer  Style="{StaticResource Style_for_scrollviewer2}">

                        </ScrollViewer>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,0,0,0"
                               Content="Status:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,0,0,0"
                               Content="{Binding Path=Task_Status}"></Label>
                        </StackPanel>
                        <Line X1="0" X2="250" Stroke="Lime" StrokeThickness="2"></Line>
                    </StackPanel>
                </ScrollViewer>
            </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="Task_Data_Template3_Tester">
            <Canvas Width="250" Height="120"
                    Margin="10,10,0,0"
                   >
               
               
                <ScrollViewer  Height="100" Margin="0,10,0,0" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Vertical" Width="230">
                        <Line X1="0" X2="250" Stroke="Lime" StrokeThickness="2"></Line>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,0,0,0"
                               Content="Task Name:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,0,0,0"
                               Content="{Binding Path=Name}"></Label>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,-5,0,0"
                               Content="Issued by:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,-5,0,0"
                               Content="{Binding Path=issuedby}"></Label>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,-5,0,0"
                               Content="Date:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,-5,0,0"
                               Content="{Binding Path=Date}"></Label>
                        </StackPanel>
                        <Label Foreground="Cyan" FontSize="15" Margin="10,-5,0,0"
                               Content="Description:"></Label>
                        <ScrollViewer Width="180" Margin="-40,0,0,0"  Style="{StaticResource Style_for_scrollviewer2}">

                        </ScrollViewer>
                        <StackPanel Orientation="Horizontal">
                            <Label Foreground="Cyan" FontSize="15" Margin="10,0,0,0"
                               Content="Status:"></Label>
                            <Label Foreground="Cyan" FontSize="15" Margin="0,0,0,0"
                               Content="{Binding Path=Task_Status}"></Label>
                        </StackPanel>
                        <Line X1="0" X2="250" Stroke="Lime" StrokeThickness="2"></Line>
                    </StackPanel>
                </ScrollViewer>
                <fa:ImageAwesome Icon="Telegram" Foreground="DarkCyan"
                                 Width="20"
                                 Height="20"
                                 Margin="205,15,0,0"
                                 
                                 >
                </fa:ImageAwesome>
                <Button x:Name="AproveButton"  BorderThickness="0"
                         Style="{DynamicResource ResourceKey=RoundedButtonStyle3}"
                         Width="20"
                         Height="20"
                         Margin="205,15,0,0"
                         Background="Yellow"
                            
                         Click="AproveButton_Click"
                         Content="{Binding Path=Id}">
                </Button>
                <fa:ImageAwesome Icon="Trash"  Foreground="DarkCyan"
                                 Width="20"
                                 Height="20"
                                 Margin="205,45,0,0"
                                 
                                 >
                </fa:ImageAwesome>
                <Button x:Name="DeclineButton"  BorderThickness="0"
                         Style="{DynamicResource ResourceKey=RoundedButtonStyle3}"
